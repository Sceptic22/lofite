{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}
{% block field %}
    <div>
        {% if object.getPath() != null %}
            <img src="{{ asset(object.getPath()) }}" style="width:200px;height:100px;"/>
        {% else %}
            <span>No picture</span>
        {% endif %}
    </div>
{% endblock %}