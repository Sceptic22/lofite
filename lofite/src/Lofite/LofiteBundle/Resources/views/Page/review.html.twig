{% extends 'LofiteBaseBundle::layout.html.twig' %}

{% block content %}
    <section id="rev" style="background-color: #353535;">
<div id="rewiew">
    <div class="container-fluid head">
        <div class="container">
            <div class="row">
                <div class="col-md-12 menu">
                    <div class="logo pull-left">
                        <a href="{{ url('LofiteBaseBundle_homepage') }}"><img src="{{ asset('img/logo.png')}}" alt=""></a>
                    </div>

                    <nav id="#mainNavbar" class="navbar navbar-expand-lg navbar-light pull-right">
                        <button class="navbar-toggler pull-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav nav">
                                <li class="nav-item">
                                    <a class="nav-link home-marker" href="{{ url('LofiteBaseBundle_homepage') }}#home">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link second-marker" href="{{ url('LofiteBaseBundle_homepage') }}#second">About</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link four-marker" href="{{ url('LofiteBaseBundle_homepage') }}#four">Services</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" style="border-top: 2px solid #30c1ff" href="{{ url('LofiteBaseBundle_homepage') }}#five">Our work</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link six-marker" href="{{ url('LofiteBaseBundle_homepage') }}#six">Contact</a>
                                </li>

                            </ul>
                        </div>
                    </nav>

                </div>
            </div>
        </div>


    </div>
</div>


{% block title %}Review {{ portfolio.getName() }}{% endblock %}






    <div class="col-md-12 text-center msection msection2" style="padding-top: 50px;margin-bottom: 5px;">
        <h1>{{ portfolio.getName() }}</h1>

        {% if mainPhoto is not empty %}
            <img src="{{ asset(mainPhoto) }}" style="max-width:100%;max-height: 100%;"/>
        {% endif %}

        <div class="row">
        {% for img in imgs %}

            <div class="col-md-6">
                <img src="{{ asset(img.getPath()) }}" style="max-width:100%;"/>
            </div>

        {% endfor %}
        </div>
        <br/>

    </div>

    <div class="col-md-12 text-center" style="padding-top: 50px;">



        {% if portfolio.getDescription() is not empty %}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <button type="button" class="btn btn-default btn-xs spoiler-trigger" data-toggle="collapse">Description</button>
                </div>
                <div class="panel-collapse collapse out">
                    <div class="panel-body">
                        <p>{{ portfolio.getDescription() }}</p>
                    </div>
                </div>
            </div>
        {% endif %}

        {% if portfolio.getTechnologies() is not empty %}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <button type="button" class="btn btn-default btn-xs spoiler-trigger" data-toggle="collapse">Technologies</button>
                </div>
                <div class="panel-collapse collapse out">
                    <div class="panel-body">
                        <p>{{ portfolio.getTechnologies() }}</p>
                    </div>
                </div>
            </div>
        {% endif %}


        {% if portfolio.getLink() is not empty %}
            <a href="{{ portfolio.getLink() }}" target="_blank" >Link</a>
        {% endif %}


    </div>
    </section>

{% endblock %}


